#include <iostream>
#include <cstdio>
using namespace std;
int main()
{
    float x,y;
    while(cin>>x)
    {
        if(x>=0&&x<2)
        {
            y=-x+2.5;
        }
        else if(2<=x&&x<4)
        {
            y=2-1.5*(x-3)*(x-3);            
        }
        else if(x>=4&&x<6)
        {
            y=x/2-1.5;
        }
        printf("%.3f\n",y);
    }
}
