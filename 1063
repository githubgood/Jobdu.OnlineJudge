#include <iostream>
using namespace std;
int main()
{
    long long n,sum;
    while(cin>>n)
    {
        sum=0;
        if(n>=0)
        {
            for(long long i=n;i<=2*n;i++)
            {
                sum+=i;
            }
        }
        else
        {
            for(long long i=2*n;i<=n;i++)
            {
                sum+=i;
            }
        }
        cout<<sum<<endl;
    }
}
